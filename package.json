  "dependencies": {
    "@dynamic-labs/ethereum": "^4.23.0",
    "@dynamic-labs/sdk-react-core": "^4.23.0",
    "@gud/math": "^1.0.0",
    "@tanstack/react-query": "^5.83.0",
    "classnames": "^2.5.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "viem": "^2.31.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@gud/typescale": "^2.0.2",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
